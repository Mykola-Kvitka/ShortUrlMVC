@using System.Diagnostics.CodeAnalysis
@model ShortUrlMVC.PL.ViewModels.ShortURLViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<div>
    <h1>Add Post</h1>
    <form method="post" asp-action="Create" enctype="multipart/form-data">


        <div>
            <label class="form-label" asp-for="OrginalURLId"></label>
            <input class="form-control" required type="text" name="OrginalURLId" asp-for="OrginalURLId" />
        </div>

        <div>
            <label class="form-label" asp-for="Short"></label>
            <input class="form-control" required type="text" name="Short" asp-for="Short" />
        </div>
        <div>
            <input type="submit" class="btn btn-primary" value="Add" />
        </div>
    </form>
</div>
